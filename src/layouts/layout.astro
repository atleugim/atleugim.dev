---
import "@fontsource/geist-sans";

import CursorFollower from "~/components/common/cursor-follower.astro";
import MetaTags from "~/components/common/meta-tags.astro";
import ThemeSwitcher from "~/components/common/theme-switcher.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <MetaTags title={title} />
  </head>
  <body class="bg-background text-foreground antialiased">
    <CursorFollower />
    <main
      class="relative mx-auto flex w-full flex-col px-6 pt-4 sm:pb-10 sm:pt-20 lg:max-w-prose"
    >
      <ThemeSwitcher />
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --background: 250 250 250;
    --foreground: 10 10 10;
    --dimmed: 90 90 90;
    --default-transition: 0.2s ease-in-out;
  }

  :root.dark {
    --background: 10 10 10;
    --foreground: 250 250 250;
    --dimmed: 190 190 190;
  }

  body {
    font-family: "Geist Sans", sans-serif;
  }

  strong {
    font-weight: normal;
    transition: all var(--default-transition);
  }

  strong:hover {
    color: #ffffff;
    font-weight: bold;
    cursor: crosshair;
  }

  svg {
    stroke-width: 1.5;
    transition:
      transform var(--default-transition),
      stroke-width var(--default-transition);
  }
</style>
