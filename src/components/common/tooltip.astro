---
interface Props {
  text: string;
  class?: string;
}

const { text, class: className } = Astro.props;
---

<div class="group relative">
  <slot />
  <span
    class:list={[
      "invisible absolute bottom-full left-1/2 -translate-x-1/2 z-10 mb-2 rounded-lg bg-foreground py-1.5 px-3 text-sm font-medium text-background opacity-0 transition-opacity duration-300 group-hover:visible group-hover:opacity-100 max-w-sm w-max whitespace-normal break-words text-pretty",
      className,
    ]}
  >
    {text}
  </span>
</div>
