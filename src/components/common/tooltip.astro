---
interface Props {
  text: string;
  class?: string;
}

const { text, class: className } = Astro.props;
---

<div class="group relative">
  <slot />
  <span
    class:list={[
      "invisible absolute bottom-full left-1/2 z-10 mb-2 w-max max-w-sm -translate-x-1/2 whitespace-normal text-pretty break-words rounded-lg bg-foreground px-3 py-1.5 text-sm text-background opacity-0 transition-opacity duration-300 group-hover:visible group-hover:opacity-100",
      className
    ]}
  >
    {text}
  </span>
</div>
