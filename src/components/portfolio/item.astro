---
import { Image } from "astro:assets";

import ExternalLink from "../common/icons/external-link.astro";

const { title, image, link } = Astro.props as Project;
---

<li
  class="group aspect-video overflow-hidden rounded-md border border-foreground/10"
>
  <a href={link} rel="noopener noreferrer" target="_blank" class="relative">
    <div
      class="absolute grid size-full place-content-center bg-background/30 opacity-0 backdrop-blur-sm transition-opacity duration-300 group-hover:opacity-100"
    >
      <ExternalLink class="size-8" />
    </div>
    <Image
      src={image}
      alt={title}
      width={600}
      height={250}
      loading="eager"
      class="size-full object-cover object-top"
    />
    <span class="sr-only">{title}</span>
  </a>
</li>
