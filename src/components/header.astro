---
import { Image } from "astro:assets";

import H1 from "./common/headings/h1.astro";
import H2 from "./common/headings/h2.astro";
import P from "./common/headings/p.astro";
---

<div class="flex flex-col items-center gap-4 sm:flex-row">
  <Image
    src="https://github.com/atleugim.png"
    alt="Miguel Vega"
    loading="eager"
    width={160}
    height={160}
    class="size-40 rounded-full object-cover object-center"
  />
  <div class="flex w-full flex-col items-center gap-1 sm:items-start">
    <H1>Miguel Vega</H1>
    <H2 class="text-neutral-600 dark:text-neutral-400">Frontend Developer</H2>
    <P>
      Creating cutting-edge web and mobile experiences. React.js & Next.js for
      the web, Flutter for mobile.
    </P>
  </div>
</div>
