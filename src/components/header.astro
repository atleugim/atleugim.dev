---
import { Image } from "astro:assets";

import Typography from "./common/typography.astro";
---

<div class="flex flex-col items-center gap-4 sm:flex-row">
  <Image
    src="https://github.com/atleugim.png"
    alt="Miguel Vega"
    loading="eager"
    width={160}
    height={160}
    class="size-40 rounded-full object-cover object-center"
  />
  <div class="flex w-full flex-col gap-1 text-center sm:text-start">
    <Typography level={1}> Miguel Vega </Typography>
    <Typography level={2} class="text-neutral-600 dark:text-neutral-400"
      >Frontend Developer</Typography
    >
    <Typography as="paragraph">
      Creating cutting-edge web and mobile experiences. React.js & Next.js for
      the web, Flutter for mobile.
    </Typography>
  </div>
</div>
